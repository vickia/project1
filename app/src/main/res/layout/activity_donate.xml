<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF9C4"
    android:gravity="center"
    tools:context="com.example.android.justhelp.Request">


    <!--REQUEST HEADER-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donations"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textColor="#33691E"
        android:layout_marginBottom="5dp"/>


    <!--Name and Location Info-->
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="30sp"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pick Up Location"
        android:textSize="30sp"
        android:inputType="textCapSentences" />




    <!--FOOD HORIZONTAL LAYOUT-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="149dp"
            android:layout_height="50dp"
            android:text="Food"
            android:textSize="30sp"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#00BFA5"
            android:text="+"
            android:layout_marginHorizontal="20dp"
            android:onClick="incrementFood" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30sp"
            android:id="@+id/foodQuantity"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#00BFA5"
            android:text="-"
            android:layout_marginHorizontal="20dp"
            android:onClick="decrementFood" />
    </LinearLayout>


    <!--WATER HORIZONTAL LAYOUT-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="149dp"
            android:layout_height="50dp"
            android:text="Water"
            android:textSize="30sp"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#EF9A9A"
            android:text="+"
            android:layout_marginHorizontal="20dp"
            android:onClick="incrementWater" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30sp"
            android:id="@+id/waterQuantity"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#EF9A9A"
            android:text="-"
            android:layout_marginHorizontal="20dp"
            android:onClick="decrementWater" />
    </LinearLayout>


    <!--SHELTER HORIZONTAL LAYOUT-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="149dp"
            android:layout_height="50dp"
            android:text="Shelter"
            android:textSize="30sp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#9575CD"
            android:text="+"
            android:layout_marginHorizontal="20dp"
            android:onClick="incrementShelter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30sp"
            android:id="@+id/shelterQuantity"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#9575CD"
            android:text="-"
            android:layout_marginHorizontal="20dp"
            android:onClick="decrementShelter" />
    </LinearLayout>





    <!--SUBMIT BUTTON-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:onClick="submit"
        android:text="SUBMIT" />


    <!--BACK BUTTON-->
    <Button
        android:id="@+id/donateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:textColor="@android:color/white"
        android:onClick="btnGoMain"
        android:text="Back" />



</LinearLayout>
